!!!
%html

  %head
    %title
      = yield(:page_title) || default_page_title
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{name: 'keywords', content: yield(:keywords) || default_meta_keywords}
    %meta{name: 'description', content: yield(:description) || default_meta_description}
    %meta{name: 'author', content: 'Wolfram Arnold, Weidong Yang'}
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
    = stylesheet_link_tag 'application', :medial => 'all'
    = javascript_include_tag 'application', 'http://app.eventsourcehq.com/es.js'
    = csrf_meta_tag
    = yield(:head)

  %body
    #alerts
      .alert.alert-error.fade.in#alert-error{style: 'display:none'}
      .alert.alert-success.fade.in#alert-success{style: 'display:none'}
    .navbar
      .navbar-inner
        .container-fluid
          = link_to 'Social Islands', root_path, class: 'brand'
          %ul.nav.pull-right
            %li
              = link_to 'About Us', '#'
            %li
              = link_to 'FAQ', '#'
            %li
              = link_to 'Sign Out', sign_out_path, class: 'pull-right', title: 'Sign Out'
    .container-fluid.full-height
      = yield
