- if signed_in?
  %div
    = current_user.name
    -#= image_tag provider_logo
  %div
    = image_tag current_user.image || 'dummy_user_48.png'
  %div
    = link_to "Sign out", sign_out_path
- else
  Sign in with
  -#= link_to image_tag('twitter_32.png'), '/auth/twitter', :title => 'Sign in with Twitter'
  = link_to image_tag('facebook_32.png'), '/auth/facebook', :title => 'Sign in with Facebook'
  = link_to image_tag('linked_in_32.png'), '/auth/linkedin', :title => 'Sign in with LinkedIn'
